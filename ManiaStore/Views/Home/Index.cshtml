@model IEnumerable<BrandVille.Models.Product>

@{
    ViewData["Title"] = "BrandVille";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-2">
        <div class="row no-gutters">
            <div class="dropdown-nav col-12" style="border-bottom:1px solid #e1e1e1">
                Gender
            </div>
            <ul class="dropdown" style="padding-top: 1rem">
                <li class="col-12">
                    <div class="dropdown-item">
                        <input id="genderMale" name="filters[gender][]" type="checkbox" value="1" />
                        <label for="genderMale">Gentlemen</label>
                    </div>
                </li>
                <li class="col-12">
                    <div class="dropdown-item">
                        <input id="genderFemale" name="filters[gender][]" type="checkbox" value="2" />
                        <label for="genderFemale">Ladies</label>
                    </div>
                </li>
            </ul>
        </div>
        <div class="row no-gutters">
            <div class="dropdown-nav col-12" style="border-bottom:1px solid #e1e1e1">
                Categories
            </div>
            <ul class="dropdown" style="padding-top: 1rem">
                <li class="col-12">
                    <a class="dropdown-item" href="#">
                        <input name="filters[category][]" type="checkbox" value="c_1" />
                        <label>Clothes</label>
                    </a>
                </li>
                <li class="col-12">
                    <a class="dropdown-item" href="#">
                        <input name="filters[category][]" type="checkbox" value="c_2" />
                        <label>Shoes</label>
                    </a>
                </li>
                <li class="col-12">
                    <a class="dropdown-item" href="#">
                        <input name="filters[category][]" type="checkbox" value="c_3" />
                        <label>Accessories</label>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-10">
        <div style="padding-bottom: 1rem" role="navigation">
            <ul class="row justify-content-sm-around">
                <li class="col-sm-1">
                    <div class="dropdown-nav" style="border-bottom:1px solid #e1e1e1">
                        Brands
                    </div>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#">
                                <input name="filters[category][]" type="checkbox" value="1" />
                                <label>Luxury brands</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input name="filters[category][]" type="checkbox" value="2" />
                                <label>Middle brands</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input name="filters[category][]" type="checkbox" value="3" />
                                <label>Economy brands</label>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class=" col-sm-1">
                    <div class="dropdown-nav" style="border-bottom:1px solid #e1e1e1">
                        Sizes
                    </div>
                    <ul class="dropdown-menu size-dropdown-menu">
                        <li>
                            <div class="dropdown-header">
                                Clothes Sizes
                            </div>
                            <div class="dropdown-item">
                                <div class="size-checkbox float-left">
                                    <input id="size-7" type="checkbox" name="" value="7">
                                    <label for="size-7">XXS</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-8" type="checkbox" name="" value="8">
                                    <label for="size-8">XS</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-9" type="checkbox" name="" value="9">
                                    <label for="size-9">S</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-10" type="checkbox" name="" value="10">
                                    <label for="size-10">M</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-1" type="checkbox" name="" value="1">
                                    <label for="size-1">L</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-2" type="checkbox" name="" value="2">
                                    <label for="size-2">XL</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-6" type="checkbox" name="" value="6">
                                    <label for="size-6">XXL</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-11" type="checkbox" name="" value="11">
                                    <label for="size-11">3XL</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-12" type="checkbox" name="" value="12">
                                    <label for="size-12">4XL</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-25" type="checkbox" name="" value="25">
                                    <label for="size-25">5XL</label>
                                </div>
                                <div class="size-checkbox float-left">
                                    <input id="size-26" type="checkbox" name="" value="26">
                                    <label for="size-26">6XL</label>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
                <li class="col-sm-1" style="margin-right: 1rem">
                    <div class="dropdown-nav" style="border-bottom:1px solid #e1e1e1">
                        Discount
                    </div>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="0to30" name="filters[discount][]" type="checkbox" value="1" />
                                <label for="0to30">0% to 30%</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="30to60" name="filters[discount][]" type="checkbox" value="2" />
                                <label for="30to60">30% to 60%</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="over60" name="filters[discount][]" type="checkbox" value="3" />
                                <label for="0to30">over 60%</label>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class=" col-sm-1">
                    <div class="dropdown-nav" style="border-bottom:1px solid #e1e1e1">
                        Season
                    </div>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="seasonSummer" type="checkbox" name="filters[season][]" value="1" />
                                <label for="seasonSummer">Summer</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="seasonFall" type="checkbox" name="filters[season][]" value="2" />
                                <label for="seasonFall">Spring/Fall</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="seasonWinter" type="checkbox" name="filters[season][]" value="3" />
                                <label for="seasonWinter">Winter</label>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class=" col-sm-1">
                    <div class="dropdown-nav" style="border-bottom:1px solid #e1e1e1">
                        Condition
                    </div>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="conditionNew" type="checkbox" name="filters[condition][]" value="withLabel" />
                                <label for="conditionNew">New</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="conditionGreat" type="checkbox" name="filters[condition][]" value="5" />
                                <label for="conditionGreat">Great</label>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <input id="conditionGood" type="checkbox" name="filters[condition][]" value="4" />
                                <label for="conditionGood">Good</label>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="row" id="items" style="overflow: hidden">
            <partial name="Items" model="Model" />
        </div>
        <div class="row" style="margin-top: 1rem" aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <button class="btn page-number btn-info" value="1">Previous</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="1">1</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="2">2</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="3">3</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="4">4</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="5">5</button>
                </li>
                <li class="page-item">
                    <button class="btn page-number btn-info" value="5">Next</button>
                </li>
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $('input').click(function () {
            var completeData = "";
            if ($(this).hasClass("checked")) {
                $(this).removeClass("checked");
            } else {
                $(this).addClass("checked");
            }
            $('input:checkbox.checked').each(function () {
                var value = $(this).attr('name') + "=" + $(this).val();
                if (completeData === "") {
                    completeData = value;
                } else {
                    completeData = completeData + ">" + $(this).attr('name') + "=" + $(this).val();
                }
            });
            $('#items').load('Home/Items', "CompleteData=" + completeData);
        });
        $('.page-number').click(function () {
            var completeData = "";
            $('input:checkbox.checked').each(function () {
                var value = $(this).attr('name') + "=" + $(this).val();
                if (completeData === "") {
                    completeData = value;
                } else {
                    completeData = completeData + ">" + $(this).attr('name') + "=" + $(this).val();
                }
            });
            $('#items').load('Home/Items', "CompleteData=" + completeData + "&PageNumber=" + $(this).val());
        });
    });
</script>
