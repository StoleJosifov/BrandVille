@model BrandVille.Models.Result

@{
    ViewData["Title"] = "BrandVille";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-2">
        <ul class="row justify-content-sm-around">
            <li class="col-sm-12">
